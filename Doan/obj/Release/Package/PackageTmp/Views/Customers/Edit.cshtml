@model Doan.Models.Customer

@{
    Layout = null;
}

<h2>Thong tin mua hang</h2>

<div class="customar__field differt__form mt--40">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CodeCus)
            <div class="margin_between">
                <div class="input_box space_between">
                    <label>First name <span>*</span></label>
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="input_box space_between">
                    <label>last name <span>*</span></label>
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="margin_between">
                <div class="input_box space_between">
                    <label>Password <span>*</span></label>
                    @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="input_box">
                <label>Address <span>*</span></label>
                @Html.EditorFor(model => model.Address_Cus, new { htmlAttributes = new { @class = "form-control" } })
            </div>


            <div class="margin_between">
                <div class="input_box space_between">
                    <label>Phone <span>*</span></label>
                    @Html.EditorFor(model => model.Phone_Cus, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="input_box space_between">
                    <label>Email address <span>*</span></label>
                    @Html.EditorFor(model => model.Email_Cus, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="contact-form-wrap">
                <form id="contact-form" action="mail.php" method="post">

                    <div class="contact-btn">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </form>
            </div>
            }
        </div>
