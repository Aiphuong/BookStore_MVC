        <div class="page-blog-details section-padding--lg bg--white">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9 col-12">
                        <div class="blog-details content" style="position: initial;">
                            <article class="blog-post-details">
                                <div class="post-thumbnail">
                                    <img src="~/Images/@Model.Image" alt="blog images"> 
                                </div>
                                <div class="post_wrapper">
                                    <div class="post_header">
                                        <h2>@Html.DisplayFor(model => model.Title)</h2>
                                        <ul class="post_author">
                                            <li>Posts by : @Html.DisplayFor(model => model.CreateBy)</li>
                                            <li class="post-separator">/</li>
                                            <li>@Html.DisplayFor(model => model.CreateDate)</li>
                                        </ul>
                                    </div>
                                    <div class="post_content">
                                        <p>@Html.DisplayFor(model => model.Content)</p>

                                        <blockquote>@Html.DisplayFor(model => model.Content)</blockquote>

                                        <p>@Html.DisplayFor(model => model.Content2)</p>

                                        <p>	@Html.DisplayFor(model => model.Content3)</p>

                                    </div>
                                    <ul class="blog_meta">
                                        <li><a href="#">comments</a></li>
                                        <li> / </li>
                                        <li>Tags:<span>book</span> <span>blog</span></li>
                                    </ul>
                                    <ul class="social__net--4 d-flex justify-content-start">
                                        <li><a href="#"><i class="zmdi zmdi-rss"></i></a></li>
                                        <li><a href="#"><i class="zmdi zmdi-linkedin"></i></a></li>
                                        <li><a href="#"><i class="zmdi zmdi-vimeo"></i></a></li>
                                        <li><a href="#"><i class="zmdi zmdi-tumblr"></i></a></li>
                                        <li><a href="#"><i class="zmdi zmdi-google-plus"></i></a></li>
                                    </ul>
                                </div>
                            </article>
                            <div class="comments_area">
                                <h3 class="comment__title">Comment</h3>
                                <iframe src="https://www.facebook.com/v3.2/plugins/comments.php?app_id=363772567412181&amp;href=https%3A%2F%2Fwww.facebook.com%2Fphoto?fbid=170955753239569&set=a.106286559706489
                                                    " style="border: none; visibility: visible; width: 100%; height: 600px; overflow: auto;" class=""></iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
