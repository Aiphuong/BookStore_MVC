@model Doan.Models.Customer

@{
    ViewBag.Title = "LoginCus";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/Static/Login.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("LoginCus", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="signin-content">
                <div class="signin-image">
                    <figure>
                        <img src="~/Images/signup-image.jpg" alt="sing up image">
                    </figure>
                    <a class="signup-image-link" href="@Url.Action("Register","Login")"><span>Register</span></a>
                </div>

                <div class="signin-form">
                    <h2 class="form-title">Login</h2>
                    <form method="POST" class="register-form" id="login-form">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email_Cus, new { style = "border: 1px solid #e1e1e1; height: 40px;margin: 0 0 14px;max-width: 100%;padding: 0 0 0 10px; width: 370px;", type = "text" })
                            @Html.ValidationMessageFor(m => m.Email_Cus)
                            <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>

                        </div>
                        <div class="form-group">
                            <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                            @Html.PasswordFor(m => m.Password, new { style = "border: 1px solid #e1e1e1; height: 40px;margin: 0 0 14px;max-width: 100%;padding: 0 0 0 10px; width: 370px;", type = "password" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                        <div class="form-group">
                            @if (ViewBag.error != null)
                            {
                                <span class="badge badge-danger">@ViewBag.error</span>
                            }
                        </div>
                        @*<div class="form-group">
                                <input type="checkbox" name="remember-me" id="remember-me" class="agree-term" />
                                <label for="remember-me" class="label-agree-term"><span><span></span></span>Remember me</label>
                            </div>*@
                        <div class="form-group form-button">
                            <input type="submit" name="signin" id="signin" class="form-submit" value="Log in" />
                        </div>
                    </form>

                </div>

            </div>
        </div>
    }


</body>
</html>
