                                <label style="margin-bottom: 5px;
                                        line-height: 2;
                                        display: block;
                                        color: #333;
                                        font-size: 12px;">New Password <span>*</span></label>
                                @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
                            </div>
