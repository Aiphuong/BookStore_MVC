

@model Doan.Models.Customer

@{
    ViewBag.Title = "ResetPass";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/Static/Login.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">
</head>
<body>
    @using (Html.BeginForm("ResetPass", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CodeCus)
            <div class="container">
                <div class="signin-content">
                    <div class="signin-image">
                        <figure>
                            <img src="~/Images/signup-image.jpg" alt="sing up image">
                        </figure>
                        <div style="display:flex; justify-content:space-around;">
                            <a class="signup-image-link" href="@Url.Action("RegisterCus","Login")"><span>Register</span></a>
                            <a class="signup-image-link" href="@Url.Action("LoginCus","Login")"><span>Login</span></a>
                        </div>
                       
                    </div>

                    <div class="signin-form">
                        <h2 class="form-title">Login</h2>
                        <form method="POST" class="register-form" id="login-form">
                            <span>Nhập email dùng để đăng nhập</span>
                            <div class="form-group">

                                @Html.TextBoxFor(m => m.Email_Cus, new { placeholder = "Email", style = "border: 1px solid #e1e1e1; height: 40px;margin: 0 0 14px;max-width: 100%;padding: 0 0 0 10px; width: 370px;", type = "text" })
                                @Html.ValidationMessageFor(m => m.Email_Cus)
                                <label for="your_name"><i class="pe-7s-user"></i></label>

                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signin" id="signin" class="form-submit" value="Send mail" />
                            </div>
                        </form>
                    </div>

                </div>
            </div>

        }


    </body>
</html>
