    <script src="~/Assets/jquery.tableToExcel.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTabledttn').DataTable({
                responsive: true,
                "lengthMenu": [[5, 10, 20, 50, -1], [5, 10, 20, 50, "All"]]
            });
            $('table').tblToExcel();
        });
    </script>
