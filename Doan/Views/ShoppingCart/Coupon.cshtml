@model Doan.Models.Coupon
@{
    ViewBag.Title = "Coupon";
    Layout = null;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="wn_checkout_wrap">

                <div class="checkout_info">
                    <span>Have a coupon? </span>
                    <a class="showcoupon" href="#">Click here to enter your code</a>
                </div>
                @using (Html.BeginForm("Coupon", "ShoppingCart", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="checkout_coupon" style="display: block;">
                        <form action="#">
                            <div class="form__coupon">
                                <div style="display: inline-block; width: 35%;">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                <input type="submit" value="Apply coupon" class="btn btn-default" style="background: #2e2e2e none repeat scroll 0 0;
                                                                                                        border-radius: 0;
                                                                                                        color: #fff;
                                                                                                        margin-left: 6px;
                                                                                                        display: inline-block;
                                                                                                        font-size: 12px;
                                                                                                        font-weight: 700;
                                                                                                        line-height: 34px;
                                                                                                        padding: 2px 20px 0;
                                                                                                        text-transform: uppercase;
                                                                                                        transition: all 0.4s ease 0s;
                                                                                                        border: 0 none;" />
                                @*<button>Apply coupon</button>*@
                            </div>
                        </form>
                    </div>
                }
            </div>

        </div>
    </div>
</div>

