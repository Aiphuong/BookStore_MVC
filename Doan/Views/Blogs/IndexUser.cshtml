@model IPagedList<Doan.Models.Blog>

@using PagedList;
@using PagedList.Mvc;


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<!-- Start Bradcaump area -->
<div class="ht__bradcaump__area bg-image--4">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-center">
                    <h2 class="bradcaump-title">Blog Page</h2>
                    <nav class="bradcaump-content">
                        <a class="breadcrumb_item" href="/Home/Index">Home</a>
                        <span class="brd-separetor">/</span>
                        <span class="breadcrumb_item active">Blog</span>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->
<div class="page-blog bg--white section-padding--lg blog-sidebar right-sidebar">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog-page">
                    <div class="page__header">
                        <h2>Category Archives: HTML</h2>
                    </div>
                    <!-- Start Single Post -->
                    @foreach (Doan.Models.Blog item in Model)
                    {
                        <article class="blog__post d-flex flex-wrap">
                            <div class="thumb">
                                <a href="blog-details.html">
                                    <img src="~/Images/@item.Image" alt="blog images">
                                </a>
                            </div>
                            <div style="position: inherit; padding:2rem;">
                                <h4><a href="blog-details.html">Blog image post</a></h4>
                                <ul class="post__meta">
                                    <li>Posts by :@Html.DisplayFor(modelItem => item.CreateBy)</li>
                                    <li class="post_separator">/</li>
                                    <li>@Html.DisplayFor(modelItem => item.CreateDate)</li>
                                </ul>
                                <p>@Html.DisplayFor(modelItem => item.Title)</p>
                                <div class="blog__btn">
                                    <a class="shopbtn" href="/Blogs/BlogDetails/@item.Id">read more</a>
                                </div>
                            </div>
                        </article>
                    }
                    <!-- End Single Post -->
                </div>
            </div>
        </div>
    </div>
</div>

